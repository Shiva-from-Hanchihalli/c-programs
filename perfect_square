#include<stdio.h>
int main()
{
    int i, n;

    printf("Enter a number: ");
    scanf("%d", &n);

    for(i = 0; i <= n; i++)
    {
        if(n == i*i)
        {
            printf("\n%d is a perfect square\n", n);
            return 0;   
        }
        
    }
    printf("\n%d is not a perfect square\n", n);
    return 0;
}
